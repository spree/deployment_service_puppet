# bluepill - process monitor
#
# simple process monitoring tool

description	"simple process monitoring tool"

start on runlevel [2345]
stop on runlevel [!2345]

expect daemon
respawn

<%- if app_name.is_a? Array -%>
  <%- app_name.each do |name| -%>
exec /usr/local/bin/bluepill load /data/<%= name %>/shared/config/<%= name %>.pill
  <%- end -%>
<%- else -%>
exec /usr/local/bin/bluepill load /data/<%= app_name %>/shared/config/<%= app_name %>.pill
<%- end -%>
